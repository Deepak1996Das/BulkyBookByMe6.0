@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
           <h3 class="text-secondary text-">CoverType List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary" >
                <i class="bi bi-patch-plus-fill"></i>&nbsp Create new Cover Type
            </a>
        </div>
    <div/>
    <br />
    <br />


 <table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Cover Type Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="70%">@obj.Name</td>
                
                <td>
                    <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>&nbsp Edit
                            </a>
                </td>
                        <td>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i>&nbsp Delete
                            </a>
                        </td>
               </tr>
        }
    </tbody>

 </table>
</div>
